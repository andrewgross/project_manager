version: "3.9"

services:
  {{ project_name }}:
    image: {{ project_name }}:latest # Use the project-specific tag
    build:
      context: .
      dockerfile: Dockerfile
    volumes:
      - ./:/app
    deploy:
      resources:
        reservations:
          devices:
            - driver: nvidia
              count: {{ GPU_COUNT }}
    command: ["/bin/bash"]
    restart: unless-stopped
    container_name: {{ project_name }}